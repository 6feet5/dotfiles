alias df='df -h'
alias diff='diff --color=auto'
alias grep='grep --color=auto'
alias ip='ip -color=auto'
alias ll='ls --group-directories-first -ahFNl --color=auto'
alias ls='ls --group-directories-first -hFN --color=auto'
alias pg='ps ax|grep'
alias pgrep='pgrep -af'
alias ccopy='xclip -i -selection clipboard'
alias cpaste='xclip -o -selection clipboard'
alias pcopy='xclip -i -selection primary'
alias ppaste='xclip -o -selection primary'
alias stow='stow --target=/home/johan'
alias vim='nvim'

function md() {
    mkdir $1
    cd $1
}
